<view wx:for="{{reservations}}" wx:for-item="r">
  <i-card  title="订单号{{r.id}}" 
  extra="{{status_tag[r.status+1]}} {{r.status==6? ','+(r.solved? '维修成功': '维修失败'): ''}}"
  thumb="">
    <view slot="content">
      <view>
        <view>问题描述: {{r.detail}} </view>
        <view>创建时间: {{r.create_time}}</view> 
      </view>
    </view>
  </i-card>
</view>
